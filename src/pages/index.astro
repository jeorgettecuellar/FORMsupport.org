---
import SiteLayout from "../layouts/SiteLayout.astro";

const stats = [
  { value: "—", label: "Youth supported" },
  { value: "—", label: "Counties served" },
  { value: "—", label: "Community partners" },
  { value: "—", label: "Resources delivered" },
];

const programs = [
  {
    title: "Resource Navigation",
    desc: "Coordinated support connecting youth to housing, education, health, legal, and financial resources.",
  },
  {
    title: "Mentorship & Guidance",
    desc: "Relationship-based mentorship supporting goal-setting, decision-making, and transition planning.",
  },
  {
    title: "Stability & Transition Support",
    desc: "Practical support during key life transitions to reduce barriers and strengthen long-term outcomes.",
  },
];

const stories = [
  { tag: "Youth + Support", title: "What stability looks like in real time", desc: "How coordinated support helps youth move from crisis to plan." },
  { tag: "Community", title: "Building a network of care", desc: "Partners expand capacity across housing, education, and wellness." },
  { tag: "Impact", title: "Turning support into outcomes", desc: "A simple framework for measurable progress over time." },
];
---

<SiteLayout title="FORM — Foundation • Opportunity • Resources • Mentorship">
  <!-- Sticky top utility bar (UW vibe) -->
  <div class="bg-[color:var(--form-navy)] text-white">
    <div class="max-w-6xl mx-auto px-5 py-2 text-xs flex items-center justify-between">
      <div class="opacity-90">Serving foster and system-impacted youth across California</div>
      <div class="hidden sm:flex gap-4">
        <a class="no-underline hover:underline" href="#get-support">Get Support</a>
        <a class="no-underline hover:underline" href="#get-involved">Partner</a>
      </div>
    </div>
  </div>

  <!-- NAV -->
  <header class="sticky top-0 z-50 bg-white/95 backdrop-blur border-b border-slate-200">
    <div class="max-w-6xl mx-auto px-5 py-4 flex items-center justify-between">
      <!-- Option A: text lockup (keep) -->
      <!--
      <a href="#top" class="no-underline">
        <div class="leading-tight">
          <div class="text-2xl font-extrabold tracking-tight text-[color:var(--form-navy)]">FORM</div>
          <div class="text-[11px] tracking-wide uppercase text-slate-600">
            Foundation • Opportunity • Resources • Mentorship
          </div>
        </div>
      </a>
      -->

      <!-- Option B: SVG lockup (recommended) -->
      <a href="#top" class="no-underline">
        <img
          src="/form-lockup.svg"
          alt="FORM — Foundation • Opportunity • Resources • Mentorship"
          class="h-10 sm:h-11 md:h-12 w-auto"
        />
      </a>

      <nav class="hidden md:flex items-center gap-7 text-sm font-medium">
        <a class="no-underline hover:underline" href="#about">About</a>
        <a class="no-underline hover:underline" href="#programs">What We Do</a>
        <a class="no-underline hover:underline" href="#impact">Our Impact</a>
        <a class="no-underline hover:underline" href="#stories">Stories</a>
        <a class="no-underline hover:underline" href="#get-involved">Get Involved</a>
      </nav>

      <div class="flex items-center gap-3">
        <a
          href="#get-involved"
          class="hidden sm:inline-flex no-underline px-4 py-2 rounded-full border border-slate-300 text-sm font-medium hover:bg-slate-50"
        >
          Volunteer
        </a>
        <a href="#donate" class="btn-primary px-4 py-2 text-sm">
          Donate
        </a>
      </div>
    </div>
  </header>

  <!-- HERO (FULL-WIDTH IMAGE BEHIND TEXT) -->
  <section id="top" class="relative overflow-hidden">
    <!-- Background image layer -->
    <div class="absolute inset-0">
      <!-- Put your image at /public/hero.jpg (or change the src below) -->
      <img
        src="/hero.jpg"
        alt="FORM supporting foster and system-impacted youth in California"
        class="h-full w-full object-cover"
        loading="eager"
      />
      <!-- Dark overlay for readability -->
      <div class="absolute inset-0 bg-[color:var(--form-navy)]/70"></div>
      <!-- Soft gradient for polish -->
      <div class="absolute inset-0 bg-gradient-to-b from-black/25 via-transparent to-black/35"></div>
    </div>

    <!-- Content -->
    <div class="relative">
      <div class="max-w-6xl mx-auto px-5 hero-pad">
        <div class="max-w-2xl">
          <p class="text-sm font-semibold text-[color:var(--form-orange)]">
            FORM • California
          </p>

          <h1 class="mt-3 text-4xl sm:text-5xl md:text-6xl font-extrabold leading-tight text-white">
            Build the foundation. Claim the future.
          </h1>

          <p class="mt-5 text-base sm:text-lg text-white/90 leading-relaxed">
            FORM advances stability and long-term outcomes for foster and system-impacted youth by connecting them to
            coordinated resources, mentorship, and community partnerships.
          </p>

          <div class="mt-8 flex flex-col sm:flex-row gap-3 sm:gap-4">
            <a href="#donate" class="btn-primary">
              Donate
            </a>
            <a href="#get-support" class="btn-secondary btn-secondary--on-dark">
              Get Support
            </a>
            <a href="#get-involved" class="btn-secondary btn-secondary--on-dark">
              Partner With Us
            </a>
          </div>

          <p class="mt-6 text-sm text-white/85">
            Looking for resources now? <a class="font-semibold underline" href="#get-support">Start here</a>.
          </p>
        </div>
      </div>

      <!-- Impact strip (under hero) -->
      <div class="bg-white border-t border-slate-200">
        <div class="max-w-6xl mx-auto px-5 py-8 grid grid-cols-2 md:grid-cols-4 gap-6">
          {stats.map((s) => (
            <div class="text-center">
              <div class="text-2xl md:text-3xl font-extrabold text-[color:var(--form-navy)]">{s.value}</div>
              <div class="mt-1 text-xs md:text-sm text-slate-600">{s.label}</div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- ABOUT -->
  <section id="about" class="section">
    <div class="max-w-4xl mx-auto px-5">
      <h2 class="text-3xl md:text-4xl font-extrabold text-[color:var(--form-navy)]">About FORM</h2>
      <p class="mt-5 text-lg text-slate-700">
        FORM is a California-based nonprofit dedicated to advancing stability and opportunity for foster and system-impacted youth.
        We operate at the intersection of direct support and systems navigation—reducing barriers across housing, education, health,
        and employment through coordinated resources, mentorship, and partnership.
      </p>
    </div>
  </section>

  <!-- PROGRAMS -->
  <section id="programs" class="section bg-slate-50 border-t border-slate-200">
    <div class="max-w-6xl mx-auto px-5">
      <div class="flex items-end justify-between gap-6 flex-wrap">
        <div>
          <h2 class="text-3xl md:text-4xl font-extrabold text-[color:var(--form-navy)]">What We Do</h2>
          <p class="mt-3 text-slate-700 max-w-2xl">
            Youth-centered support designed to reduce barriers and improve outcomes during critical life transitions.
          </p>
        </div>
        <a
          href="#get-involved"
          class="no-underline inline-flex px-4 py-2 rounded-full border border-slate-300 font-semibold text-[color:var(--form-navy)] hover:bg-white"
        >
          Explore ways to help
        </a>
      </div>

      <div class="mt-10 grid md:grid-cols-3 gap-6">
        {programs.map((p) => (
          <div class="card p-7">
            <div class="h-10 w-10 rounded-xl bg-[color:var(--form-orange)]/15 mb-4"></div>
            <h3 class="text-xl font-extrabold text-[color:var(--form-navy)]">{p.title}</h3>
            <p class="mt-3 text-slate-700">{p.desc}</p>
            <a href="#get-involved" class="mt-5 inline-flex font-semibold text-[color:var(--form-orange)] no-underline hover:underline">
              Learn more
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- IMPACT -->
  <section id="impact" class="section">
    <div class="max-w-6xl mx-auto px-5 grid lg:grid-cols-12 gap-10 items-start">
      <div class="lg:col-span-7">
        <h2 class="text-3xl md:text-4xl font-extrabold text-[color:var(--form-navy)]">Our Impact Focus</h2>
        <p class="mt-4 text-slate-700 max-w-2xl">
          Our work is guided by measurable outcomes that support stability, continuity, and long-term success.
        </p>

        <div class="mt-8 grid sm:grid-cols-2 gap-4">
          {[
            "Housing stability",
            "Educational access and persistence",
            "Health and wellness support",
            "Employment and economic mobility",
          ].map((x) => (
            <div class="rounded-2xl border border-slate-200 p-5">
              <div class="text-sm font-extrabold text-[color:var(--form-navy)]">{x}</div>
              <div class="mt-2 text-sm text-slate-700">
                Placeholder line for how you measure this (we can add metrics next).
              </div>
            </div>
          ))}
        </div>
      </div>

      <div class="lg:col-span-5">
        <div class="rounded-3xl bg-[color:var(--form-navy)] text-white p-8 shadow-sm">
          <div class="text-sm font-semibold text-white/80">Grant-ready language</div>
          <p class="mt-3 text-lg font-extrabold">
            FORM connects youth to coordinated resources, mentorship, and community partnerships that reduce structural barriers.
          </p>
          <p class="mt-4 text-white/80 text-sm">
            Want a one-page org overview for grants, decks, and outreach? I can generate it using this same voice.
          </p>
          <a
            href="#get-involved"
            class="mt-6 inline-flex no-underline px-5 py-3 rounded-full bg-white text-[color:var(--form-navy)] font-semibold hover:opacity-90"
          >
            Request partner info
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- STORIES -->
  <section id="stories" class="section bg-slate-50 border-t border-slate-200">
    <div class="max-w-6xl mx-auto px-5">
      <h2 class="text-3xl md:text-4xl font-extrabold text-[color:var(--form-navy)]">Stories & Updates</h2>
      <p class="mt-3 text-slate-700 max-w-2xl">
        Highlights from youth, mentors, and community partners.
      </p>

      <div class="mt-10 grid md:grid-cols-3 gap-6">
        {stories.map((s) => (
          <div class="card p-7">
            <div class="text-xs font-extrabold tracking-wide text-[color:var(--form-orange)] uppercase">{s.tag}</div>
            <div class="mt-2 text-lg font-extrabold text-[color:var(--form-navy)]">{s.title}</div>
            <p class="mt-3 text-slate-700">{s.desc}</p>
            <a class="mt-5 inline-flex no-underline font-semibold text-[color:var(--form-navy)] hover:underline" href="#stories">
              Read more
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- GET SUPPORT -->
  <section id="get-support" class="section">
    <div class="max-w-6xl mx-auto px-5">
      <div class="rounded-3xl border border-slate-200 bg-white p-8 md:p-10 shadow-sm flex flex-col md:flex-row md:items-center md:justify-between gap-6">
        <div>
          <h2 class="text-2xl md:text-3xl font-extrabold text-[color:var(--form-navy)]">Need support?</h2>
          <p class="mt-3 text-slate-700 max-w-2xl">
            If you’re foster or system-impacted and looking for resources, start here. We’ll help you identify options and next steps.
          </p>
        </div>
        <a href="#contact" class="btn-primary">
          Get Support
        </a>
      </div>
    </div>
  </section>

  <!-- GET INVOLVED -->
  <section id="get-involved" class="section bg-[color:var(--form-navy)] text-white">
    <div class="max-w-6xl mx-auto px-5 grid md:grid-cols-2 gap-10 items-center">
      <div>
        <h2 class="text-3xl md:text-4xl font-extrabold">Get Involved</h2>
        <p class="mt-4 text-white/80 max-w-xl">
          FORM partners with individuals, organizations, and institutions committed to advancing opportunity and stability for youth.
        </p>
      </div>

      <div class="flex flex-col sm:flex-row gap-3 sm:justify-end">
        <a id="donate" href="#donate" class="btn-primary">
          Make a Donation
        </a>
        <a
          href="#contact"
          class="btn-secondary btn-secondary--on-dark"
        >
          Volunteer / Partner
        </a>
      </div>
    </div>
  </section>

  <!-- FOOTER -->
  <footer id="contact" class="border-t border-slate-200 py-10">
    <div class="max-w-6xl mx-auto px-5 grid md:grid-cols-3 gap-8 text-sm">
      <div>
        <div class="font-extrabold text-[color:var(--form-navy)]">FORM</div>
        <div class="mt-1 text-xs uppercase tracking-wide text-slate-600">
          Foundation • Opportunity • Resources • Mentorship
        </div>
        <p class="mt-3 text-slate-700">
          Build the foundation. Claim the future.
        </p>
      </div>

      <div>
        <div class="font-extrabold text-[color:var(--form-navy)]">Contact</div>
        <p class="mt-3 text-slate-700">Email: hello@formsupport.org</p>
        <p class="text-slate-700">California</p>
      </div>

      <div>
        <div class="font-extrabold text-[color:var(--form-navy)]">Links</div>
        <div class="mt-3 flex flex-col gap-2">
          <a class="no-underline hover:underline text-slate-700" href="#donate">Donate</a>
          <a class="no-underline hover:underline text-slate-700" href="#get-support">Get Support</a>
          <a class="no-underline hover:underline text-slate-700" href="#get-involved">Get Involved</a>
        </div>
      </div>
    </div>

    <div class="max-w-6xl mx-auto px-5 mt-10 text-xs text-slate-500">
      © {new Date().getFullYear()} FORM — Foundation • Opportunity • Resources • Mentorship
    </div>
  </footer>
</SiteLayout>
